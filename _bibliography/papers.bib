	author = {Patel, Matishalin and Raymond, Ben and Bonsall, Michael B. and West, Stuart A.},
	year = {2019},
	note = {tex.ids= patelCrystalToxins2019a, patelCrystalToxinsVolunteer},
	keywords = {social evolution, cooperation, kin selection, game theory, virulence, evolution, kin-selection},
	pages = {310--319},
	file = {Patel et al_2019_Crystal toxins and the volunteer's dilemma in bacteria.pdf:/Users/755108/Zotero/storage/5KJ3P32I/Patel et al_2019_Crystal toxins and the volunteer's dilemma in bacteria.pdf:application/pdf;Patel et al_Crystal Toxins and the volunteer's dilemma in bacteria.pdf:/Users/755108/Zotero/storage/67C664D7/Patel et al_Crystal Toxins and the volunteer's dilemma in bacteria.pdf:application/pdf;Patel et al_Crystal Toxins and the volunteer's dilemma in bacteria.pdf:/Users/755108/Zotero/storage/MUVH6N8H/Patel et al_Crystal Toxins and the volunteer's dilemma in bacteria.pdf:application/pdf;Snapshot:/Users/755108/Zotero/storage/3AILQUZ9/jeb.html:text/html;Snapshot:/Users/755108/Zotero/storage/5IGTUJBJ/jeb.html:text/html;Snapshot:/Users/755108/Zotero/storage/ZQZ4WYZN/jeb.html:text/html},

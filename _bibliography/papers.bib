	month = aug,
	year = {2024},
	note = {Publisher: Nature Publishing Group},
	keywords = {Evolutionary theory, Dynamical systems, Computational models, Behavioural ecology},
	pages = {6583},
	file = {Full Text PDF:/Users/755108/Zotero/storage/86DEAZP7/Hunt et al. - 2024 - The evolution of democratic peace in animal societ.pdf:application/pdf},
